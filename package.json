{
  "name": "electron-react-typescript-app",
  "version": "1.0.0",
  "description": "Electron app with React and TypeScript",
  "main": "main.js",
  "scripts": {
    "build-main": "tsc main.ts --outDir .",
    "prestart": "npm run build-main",
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"cd src && npm start\"",
    "build": "cd src && npm run build",
    "postinstall": "cd src && npm install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.4.2",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
